{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@terrible-lizard/generators": ["tools/generators/src/index.ts"],
            "@terrible-lizard/networking": ["libs/networking/src/index.ts"],
            "@terrible-lizard/networking/*": ["libs/networking/src/*"],
            "@terrible-lizard/shared": ["shared/src/index.ts"],
            "@terrible-lizard/ui": ["libs/ui/src/index.ts"],
            "@terrible-lizard/ui/*": ["libs/ui/src/*"],
            "@terrible-lizard/utilities": ["libs/utilities/src/index.ts"],
            "@terrible-lizard/utilities/*": ["libs/utilities/src/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
